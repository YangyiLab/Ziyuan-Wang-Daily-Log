issn = {1664302X},
journal = {Frontiers in Microbiology},
keywords = {Biological soil crusts,Dryland,Global change,Microhabitat,Ribosomal RNA,Shrubland,Soil bacterial community,Soil fungal community},
number = {SEP},
pages = {891},
pmid = {26388845},
publisher = {Front Microbiol},
title = {{Soil bacterial and fungal community responses to nitrogen addition across soil depth and microhabitat in an arid shrubland}},

issn = {00380717},
journal = {Soil Biology and Biochemistry},
keywords = {Bacteria,Clover,Fungi,Grassland,Leaching,Management,Microbial biomass,Nitrogen},
month = {aug},
number = {8},
pages = {2092--2103},
title = {{Fungal/bacterial ratios in grasslands with contrasting nitrogen management}},
url = {https://www.sciencedirect.com/science/article/pii/S0038071706000903},
volume = {38},
